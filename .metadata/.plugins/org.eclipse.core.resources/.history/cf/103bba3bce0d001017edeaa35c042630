@RestController
@RequestMapping("test")
// SpringBoot는 기본적으로 produces속성이 application/json charset=UTF-8 이기 떄문에
// 자동으로 MessageConvertor로 변한됨
public class TestController {

	@Autowired
	private StudyBean studyBean;
	
	
	@GetMapping
	public ResponseEntity<String> getTest(){
		return ResponseEntity.ok("응답확인");
		
	}
}
